<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane id="box" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kryptojagd.controls.TimeOverController">
    <center>
        <Label fx:id="feedbackText" text="Oh nein, Eve hat die Floppy-Disk vor dir gefunden. Starte das Level neu um sie zurück zu holen!" BorderPane.alignment="CENTER" />
    </center>
    <opaqueInsets>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </opaqueInsets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="restart" mnemonicParsing="false" onAction="#restartAction" text="Neu Starten">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="menu" contentDisplay="CENTER" mnemonicParsing="false" onAction="#menuAction" text="Menü">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <top>
      <Label fx:id="timer" alignment="TOP_RIGHT" text="timer" BorderPane.alignment="CENTER" />
       <Label fx:id="score" text="Label" />
   </top>
</BorderPane>
