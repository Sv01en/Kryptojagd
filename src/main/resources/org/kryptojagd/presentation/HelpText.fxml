<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane id="box" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kryptojagd.controls.HelpTextController">
   <center>
      <Label fx:id="label" id="answers" text="Infotext" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#closeHelpText" text="Weiter" BorderPane.alignment="BOTTOM_CENTER" />
   </bottom>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="100.0" right="100.0" top="20.0" />
   </padding>
   <top>
      <Label fx:id="score" text="Label" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
