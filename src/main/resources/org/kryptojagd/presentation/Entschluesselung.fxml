<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="406.0" prefWidth="538.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.kryptojagd.controls.DecryptionController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="verschluesselterRaetseltext" text="Verschlüsselter Rätseltext" />
            <Label fx:id="frage" text="Um welches Verschlüsselungsverfahren handelt es sich?" />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="verfahren1" mnemonicParsing="false" onAction="#klickVerfahren1" text="Verfahren 1" />
                  <Button fx:id="verfahren2" mnemonicParsing="false" onAction="#klickVerfahren2" text="Verfahren 2" />
                  <Button fx:id="verfahren3" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#klickVerfahren3" text="Verfahren 3" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <Label text="Timer" BorderPane.alignment="TOP_RIGHT">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
