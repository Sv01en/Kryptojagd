            </HBox>
               <TextField fx:id="textField" maxWidth="900.0" minHeight="45.0" minWidth="600.0" prefHeight="45.0" prefWidth="900.0" />
            <HBox alignment="TOP_CENTER" prefHeight="72.0" prefWidth="1240.0">
               <children>
                  <Button fx:id="Cryptotool" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#clickCrypto" text="Kryptotool">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin></Button>
                     <Button fx:id="button1" mnemonicParsing="false" onAction="#clickSend" text="Senden">
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <!--DO NOT TOUCH-->
   <top>
      <BorderPane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <right>
            <Label fx:id="timer" text="" BorderPane.alignment="CENTER" />
         </right>

         <left>
            <Button fx:id="help" mnemonicParsing="false" text="?" BorderPane.alignment="CENTER" />
         </left>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </BorderPane>
   </top>
   <!--DO NOT TOUCH-->
